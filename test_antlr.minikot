print("Enter start number (Int): ");
var i: Int = readInt();

print("Enter step (Double): ");
var step: Double = readDouble();

var limit: Double = i + step * 5;

println("Counting...");
println("Limit is: " + limit);

while (i < limit) {
    print("Current: ");
    println(i);
    
    if (i > limit / 2) {
        println("  -> Passed half way!");
    } else {
        println("  -> Still go...");
    }

    i = i + step;
}

var p: Int = 2 ^ 3 ^ 2; 
print("Power check (2^3^2): ");
println(p);

println("Done!");